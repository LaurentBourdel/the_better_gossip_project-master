
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Update a gossip</h1>
    <p class="lead">Please fill the form below</p>
  </div>
</div>

<div class="form-group">

    <%= form_tag url_for(action: 'update'), method: "put" do %>

      <%= label_tag 'Title' %>
      <%= text_field_tag 'title', @gossip.title , class: "form-control" %>
      <br /> <br />

      <%= label_tag 'Body' %>
      <%= text_area_tag 'content', @gossip.content , class: "form-control" %>
      <br /> <br />

      <%= submit_tag "Go", class: "btn btn-secondary bg-info'" %>

    <% end %>
 </div>

