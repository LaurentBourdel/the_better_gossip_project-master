
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Write a gossip</h1>
    <p class="lead">Fill the form</p>
  </div>
</div>

 <% if @gossip.errors.any? %>
  <div style="padding: 5px;">
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading">Ouups !!</h4>
      <p>Your gossip was not created:</p>
      <hr>
      <ul>
        <% @gossip.errors.full_messages.each do |message| %>
          <li><p class="mb-0"><%= message %></p></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>

<div class="form-group">

    <%= form_tag url_for(action: 'create'), method: "post" do %>

      <%= label_tag 'Title' %>
      <%= text_field_tag 'title', @gossip.title , class: "form-control" %>
      <br /> <br />

      <%= label_tag 'Body' %>
      <%= text_area_tag 'content', @gossip.content , class: "form-control" %>
      <br /> <br />

      <%= submit_tag "Go", class: "btn btn-secondary bg-info'" %>

    <% end %>
 </div>