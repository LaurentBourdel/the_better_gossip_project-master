
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Here is a new gossip !</h1>
    <p class="lead">What's going on ?</p>
  </div>
</div>

<div class="card mt-3">
  <div class="card-header">
    <h3 class="card-title"><%= @gossip.title %> </h3>
    <h5 class="card-subtitle mb-2 text-muted"> <%= @gossip.user.first_name %><%= ", " %><%= link_to @gossip.user.city.name, city_path(@gossip.user.city_id), {:class=>"card-link"} %> </h5>
    <p class="card-text text-muted"><%= @gossip.created_at %></p>
  </div>
  <div class="card-body">
    <p class="card-text"><%= @gossip.content %></p>
  </div>
  <div class="card-footer">
    <%= link_to "Author", user_path(@gossip.user_id), {:class=>"card-link"} %>
    <% if current_user.id == @gossip.user_id %>
    <%= link_to "Edit  -  ", edit_gossip_path(@gossip.id), {:class=>"card-link"} %>
    <%= link_to 'Delete', gossip_path(@gossip.id), method: 'delete' %>
    <% end %>
  </div>
</div>
