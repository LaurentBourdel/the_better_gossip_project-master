
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Sign in</h1>
    <p class="lead">Open your session..</p>
  </div>
</div>

 <div class="form-group">
<%= form_tag url_for(action: 'create'), method: "post" do %>

  <%= label_tag 'Email : ' %>
  <%= text_field_tag 'email', :'email', class: "form-control" %>
  <br /> <br />

  <%= label_tag 'Password : ' %>
  <%= text_field_tag 'password_digest', :password, class: "form-control" %>
  <br /> <br />

  <%= submit_tag "Go", class: "btn btn-secondary " %>

<% end %>
</div>

