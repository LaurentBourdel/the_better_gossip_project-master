
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Author details ! </h1>
    <p class="lead">Know more about this author..</p>
  </div>
</div>

<div class="card mt-3">
	<div class="card-header">
		<h4 class="card-title"> <%= @user.first_name %>  <%= @user.last_name %> </h4>
		<h6 class="card-subtitle mb-2 text-muted"> <%= link_to @user.city.name, city_path(@user.city_id), {:class=>"card-link"} %> </h6>
		<h6 class="card-subtitle mb-2 text-muted"> <%= @user.age %> ans </h6>
	</div>
	<div class="card-body">
		<p class="card-text"><%= @user.description %></p>
	</div>
	<div class="card-footer">
		<a class="card-link" href=#> Email : <%= @user.email %> </a>
	</div>
</div>
